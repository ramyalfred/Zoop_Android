<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HintText">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_hint</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RecyclerTitle">
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
    </style>

    <style name="RecyclerStreak">
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_hint</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
    </style>
</resources>